{
  "name": "Query Grabber",
  "description": "This extension allows users to copy query parameters from links.",
  "version": "1.4.0",
  "manifest_version": 2,
  "background": {
    "page": "/view/background.html"
  },
  "icons": {
  "16": "assets/clipboard16.png",
  "32": "assets/clipboard32.png",
  "64": "assets/clipboard64.png",
  "128": "assets/clipboard128.png"
},
  "permissions": [
    "storage",
    "contextMenus",
    "clipboardWrite",
    "notifications"
  ],
  "browser_action": {
    "default_title": "Query Grabber",
    "default_popup": "/view/popup.html",
    "default_icon": {
      "16": "assets/clipboard16.png",
      "32": "assets/clipboard32.png",
      "64": "assets/clipboard64.png",
      "128": "assets/clipboard128.png"
    }
  }
}